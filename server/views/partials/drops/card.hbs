<div class="drop-card" data-drop-id="{{id}}">
  <div class="drop-card-header">
    {{#if cover_image}}
      <div class="drop-cover" style="background-image: url('{{cover_image}}')"></div>
    {{else}}
      <div class="drop-cover drop-cover-default" style="background-color: {{background_color}}">
        <div class="drop-icon">
          {{> icons/drop}}
        </div>
      </div>
    {{/if}}

    <div class="drop-status">
      {{#if is_active}}
        <span class="status-badge active">
          <span class="status-dot"></span>
          Live
        </span>
      {{else}}
        <span class="status-badge inactive">
          <span class="status-dot"></span>
          Draft
        </span>
      {{/if}}
    </div>
  </div>

  <div class="drop-card-content">
    <h3 class="drop-title">{{title}}</h3>
    {{#if description}}
      <p class="drop-description">{{description}}</p>
    {{/if}}

    <div class="drop-stats">
      <div class="stat">
        <span class="stat-number">{{signup_count}}</span>
        <span class="stat-label">Signups</span>
      </div>
      <div class="stat">
        <span class="stat-number">{{formatDate created_at "MMM d"}}</span>
        <span class="stat-label">Created</span>
      </div>
    </div>

    <div class="drop-url">
      <span class="url-prefix">{{../domain}}/drop/</span>
      <span class="url-slug">{{slug}}</span>
    </div>
  </div>

  <div class="drop-card-actions">
    <button type="button" class="button action edit" title="Edit Drop" onclick="editDrop('{{id}}')">
      {{> icons/pencil}}
    </button>
    <button type="button" class="button action qrcode" title="QR Code" onclick="showDropQR('{{id}}', '{{../domain}}/drop/{{slug}}')">
      {{> icons/qrcode}}
    </button>
    <button type="button" class="button action stats" title="View Stats" onclick="viewDropStats('{{id}}')">
      {{> icons/chart}}
    </button>
    <button type="button" class="button action delete" title="Delete Drop" onclick="deleteDrop('{{id}}', '{{title}}')">
      {{> icons/trash}}
    </button>
  </div>
</div>
