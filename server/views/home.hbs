                        {{/if}}
                        {{#if this.event_date}}
                        <p class="figma-event-date">{{formatDate this.event_date "MMMM do, h:mm a"}}</p>
                        {{/if}}
                        {{#if this.event_address}}
                        <p class="figma-event-address">{{this.event_address}}</p>
                        {{/if}}
                        {{#if this.description}}
                        <p class="figma-event-description">{{this.description}}</p>
