    // Carousel functionality - Initialize variables first to avoid temporal dead zone
    let currentSlide = 0;
    let totalSlides = 0; // Will be calculated after DOM is ready
    let isTransitioning = false;
    let carouselInitialized = false; // Flag to prevent multiple initializations

    // Carousel elements
    const carouselTrack = document.getElementById('carouselTrack');
    const carouselPrev = document.getElementById('carouselPrev');
    const carouselNext = document.getElementById('carouselNext');
    let carouselDots = []; // Will be populated after dots are generated

    // Debug element selection - now safe to access totalSlides
    console.log('üîç Element Debug:', {
        carouselTrack: !!carouselTrack,
        carouselTrackElement: carouselTrack,
        carouselPrev: !!carouselPrev,
        carouselNext: !!carouselNext,
        carouselDotsCount: carouselDots.length,
        totalSlides: totalSlides,
        carouselInitialized: carouselInitialized
    });

    // Carousel track validation
    if (!carouselTrack) {
        console.error('‚ùå Carousel track NOT found! Touch functionality will not work.');
        return;
    }

    // Handle dynamic share and tickets buttons
    document.addEventListener('click', function(e) {
        // Handle share buttons
        if (e.target.closest('.figma-share-btn')) {
            const shareBtn = e.target.closest('.figma-share-btn');
            const shareUrl = shareBtn.getAttribute('data-share-url');

            if (shareUrl) {
                if (navigator.share) {
                    navigator.share({
                        title: 'Check out this event!',
                        url: shareUrl
                    }).catch(console.error);
                } else {
                    // Fallback: copy to clipboard
                    navigator.clipboard.writeText(shareUrl).then(() => {
                        console.log('‚úÖ URL copied to clipboard');
                        // You could show a toast notification here
                    }).catch(console.error);
                }
            }
        }

        // Handle tickets/drop buttons
        if (e.target.closest('.figma-tickets-btn')) {
            const ticketsBtn = e.target.closest('.figma-tickets-btn');
            const ticketsUrl = ticketsBtn.getAttribute('data-tickets-url');
            const dropUrl = ticketsBtn.getAttribute('data-drop-url');

            console.log('üé´ Tickets button clicked:', {
                ticketsUrl: ticketsUrl,
                dropUrl: dropUrl,
                hasOnclick: ticketsBtn.hasAttribute('onclick'),
                buttonElement: ticketsBtn
            });

            if (ticketsUrl && ticketsUrl.trim() !== '' && ticketsUrl !== 'null') {
                console.log('‚úÖ Opening tickets modal with URL:', ticketsUrl);
                // Prevent default and stop propagation to prevent onclick from executing
                e.preventDefault();
                e.stopPropagation();

                // Update modal iframe source and open modal
                const poshIframe = document.getElementById('poshIframe');
                if (poshIframe) {
                    poshIframe.src = ticketsUrl;
                    console.log('üéØ Updated iframe src to:', ticketsUrl);
                }

                if (modalOverlay) {
                    modalOverlay.style.display = 'flex';
                    document.body.style.overflow = 'hidden';
                    console.log('üé™ Modal opened successfully');
                }
            } else if (dropUrl) {
                console.log('üîó Navigating to drop page:', dropUrl);
                // Prevent default and navigate to drop page
                e.preventDefault();
                e.stopPropagation();
                window.location.href = dropUrl;
            } else {
                // Check if button has onclick handler (for non-tickets buttons)
                if (ticketsBtn.hasAttribute('onclick')) {
                    console.log('üéØ Button has onclick handler, letting it execute');
                    // Don't prevent default, let onclick handler execute
                    return;
                } else {
                    console.log('‚ùå No valid tickets URL or onclick handler available');
                }
            }
        }

        // Handle drop share buttons
        if (e.target.closest('.drop-share-btn')) {
            const shareBtn = e.target.closest('.drop-share-btn');
            const dropTitle = shareBtn.getAttribute('data-drop-title');
            const dropSlug = shareBtn.getAttribute('data-drop-slug');

            if (dropTitle && dropSlug) {
                const shareData = {
                    title: dropTitle,
                    text: `Check out this event: ${dropTitle}`,
                    url: `${window.location.origin}/drop/${dropSlug}`
                };

                if (navigator.share) {
                    navigator.share(shareData).catch(err => {
                        console.log('Error sharing:', err);
                        // Fallback to clipboard
                        navigator.clipboard.writeText(shareData.url).then(() => {
                            alert('Link copied to clipboard!');
                        }).catch(() => {
                            alert('Share this event:\n\n' + shareData.title + '\n' + shareData.url);
                        });
                    });
                } else {
                    // Fallback for browsers without native sharing
                    navigator.clipboard.writeText(shareData.url).then(() => {
                        alert('Link copied to clipboard!');
                    }).catch(() => {
                        alert('Share this event:\n\n' + shareData.title + '\n' + shareData.url);
                    });
                }
            }
        }
    });

    // JavaScript loaded successfully

    // Navigation functionality
    navItems.forEach(item => {
        item.addEventListener('click', function(e) {
            e.preventDefault();

            // Add click animation class
            this.classList.add('clicking');

            // Remove selected state from all items
            navItems.forEach(navItem => {
                navItem.classList.remove('selected');
            });

            // Add selected state to clicked item
            this.classList.add('selected');

            // Remove click animation after animation completes
            setTimeout(() => {
                this.classList.remove('clicking');
            }, 200);
        });
    });



    // Generate carousel dots dynamically to ensure correct indexing
    function generateCarouselDots() {
        // Safety check: Ensure variables are properly initialized
        if (typeof totalSlides === 'undefined') {
            console.error('‚ùå totalSlides variable not initialized! Cannot generate dots.');
            return;
        }

        const indicatorsContainer = document.getElementById('carouselIndicators');
        if (!indicatorsContainer) {
            console.error('‚ùå Carousel indicators container not found!');
            return;
        }

        // Ensure totalSlides is properly set before generating dots
        if (totalSlides === 0) {
            console.warn('‚ö†Ô∏è totalSlides is 0, recalculating from DOM...');
            const slides = document.querySelectorAll('.carousel-slide');
            totalSlides = slides.length;
            console.log(`üî¢ Recalculated totalSlides: ${totalSlides}`);
        }

        // Additional safety check after recalculation
        if (totalSlides === 0) {
            console.warn('‚ö†Ô∏è No slides found in DOM, cannot generate dots');
            return;
        }

        // Clear existing dots
        indicatorsContainer.innerHTML = '';

        // Generate dots for each slide
        for (let i = 0; i < totalSlides; i++) {
            const dot = document.createElement('button');
            dot.className = `carousel-dot${i === 0 ? ' active' : ''}`;
            dot.setAttribute('data-slide', i.toString());
            dot.setAttribute('role', 'tab');
            dot.setAttribute('aria-selected', i === 0 ? 'true' : 'false');
            dot.setAttribute('aria-label', `Slide ${i + 1}`);

            // Add click event listener
            dot.addEventListener('click', () => {
                updateCarousel(i);
            });

            indicatorsContainer.appendChild(dot);
        }

        console.log(`üéØ Generated ${totalSlides} carousel dots with correct indexing`);

        // Update carouselDots array
        carouselDots = document.querySelectorAll('.carousel-dot');
        console.log(`üè† Homepage loaded with ${totalSlides} total slides`);
    }

    // üöÄ CAROUSEL REINITIALIZATION FOR DYNAMIC CARD UPDATES
    function reinitializeCarousel(newTotalSlides) {
        console.log(`üîÑ Reinitializing carousel: ${totalSlides} ‚Üí ${newTotalSlides} slides`);

        const oldTotalSlides = totalSlides;
        totalSlides = newTotalSlides;

        // Update carousel track width and slide widths
        if (carouselTrack && totalSlides > 0) {
            const trackWidth = totalSlides * 100;
            carouselTrack.style.width = `${trackWidth}%`;

            // Update individual slide widths
            const slides = carouselTrack.querySelectorAll('.carousel-slide');
            const slideWidth = 100 / totalSlides;
            console.log(`üîÑ Reinitializing ${slides.length} slides to ${slideWidth}% width each`);
            slides.forEach((slide, index) => {
                slide.style.width = `${slideWidth}%`;
                slide.style.flexBasis = `${slideWidth}%`;
                slide.setAttribute('data-slide', index.toString());
                console.log(`üìê Reinit Slide ${index}: width=${slideWidth}%, data-slide=${index}`);
            });

            console.log(`üé® Updated carousel track width to ${trackWidth}% with ${totalSlides} slides at ${100 / totalSlides}% each`);
        }

        // Regenerate dots
        generateCarouselDots();

        // Adjust current slide if necessary
        if (currentSlide >= totalSlides) {
            currentSlide = Math.max(0, totalSlides - 1);
            console.log(`üìç Adjusted current slide to ${currentSlide}`);
        }

        // Update carousel position
        updateCarousel(currentSlide, false);

        console.log(`‚úÖ Carousel reinitialized successfully`);
    }

    // üöÄ REFRESH HOMEPAGE CARDS FROM SERVER
    async function refreshHomepageCards() {
        try {
            console.log('üîÑ Refreshing homepage cards from server...');

            const response = await fetch('/api/home-settings/refresh');
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }

            const data = await response.json();
            console.log('üì¶ Received homepage data:', data);

            // Update the carousel with new data
            await updateCarouselWithNewData(data);

            console.log('‚úÖ Homepage cards refreshed successfully');
        } catch (error) {
            console.error('‚ùå Failed to refresh homepage cards:', error);
        }
    }

    // üöÄ UPDATE CAROUSEL WITH NEW DATA
    async function updateCarouselWithNewData(data) {
        const { homeSettings, featuredDrops, formattedDate, totalCards } = data;

        console.log(`üéØ Updating carousel with ${totalCards} total cards`);

        // Get carousel track
        const track = document.getElementById('carouselTrack');
        if (!track) {
            console.error('‚ùå Carousel track not found');
            return;
        }

        // Clear existing slides
        track.innerHTML = '';

        // Add home settings card (always first)
        let slideOffset = 0;
        if (homeSettings.event_title) {
            const homeCard = createHomeSettingsCard(homeSettings, formattedDate);
            track.appendChild(homeCard);
            slideOffset = 1; // Featured drops start at index 1
        }

        // Add featured drops cards
        featuredDrops.forEach((drop, index) => {
            const dropCard = createDropCard(drop, index + slideOffset);
            track.appendChild(dropCard);
        });

        // Reinitialize carousel
        reinitializeCarousel(totalCards);
    }

    // Initialize carousel after DOM elements are ready
    function initializeCarousel() {
        // Prevent multiple initializations
        if (carouselInitialized) {
            console.log('üîÑ Carousel already initialized, skipping...');
            return;
        }

        console.log('üöÄ Starting carousel initialization...');

        // Wait for DOM elements to be available
        const slides = document.querySelectorAll('.carousel-slide');
        const track = document.getElementById('carouselTrack');
        const indicators = document.getElementById('carouselIndicators');

        if (!track) {
            console.error('‚ùå Carousel track not found, retrying in 50ms...');
            setTimeout(initializeCarousel, 50);
            return;
        }

        if (!indicators) {
            console.error('‚ùå Carousel indicators not found, retrying in 50ms...');
            setTimeout(initializeCarousel, 50);
            return;
        }

        if (slides.length === 0) {
            console.error('‚ùå No carousel slides found, retrying in 50ms...');
            setTimeout(initializeCarousel, 50);
            return;
        }

        // Calculate totalSlides from actual DOM elements
        totalSlides = slides.length;
        console.log(`üé† Carousel initialized with ${totalSlides} slides`);

        // Set carousel track width dynamically based on number of slides
        if (track && totalSlides > 0) {
            // Each slide should be 100% of the container width, so track width = totalSlides * 100%
            // But we need to set individual slide widths to be 100% / totalSlides of the track
            const trackWidth = totalSlides * 100;
            track.style.width = `${trackWidth}%`;

            // Set each slide to be exactly 1/totalSlides of the track width
            const slides = track.querySelectorAll('.carousel-slide');
            const slideWidth = 100 / totalSlides;
            console.log(`üé® Setting ${slides.length} slides to ${slideWidth}% width each`);
            slides.forEach((slide, index) => {
                slide.style.width = `${slideWidth}%`;
                slide.style.flexBasis = `${slideWidth}%`;
                slide.setAttribute('data-slide', index.toString());
