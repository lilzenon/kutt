    const contact = contactData.contact || contactData;
    const dropHistory = contactData.dropHistory || contact.dropHistory || [];
    const interactions = contactData.interactions || contact.interactions || [];

    // Add drop signups
    if (dropHistory && dropHistory.length > 0) {
