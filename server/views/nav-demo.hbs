<div class="page-container">
    <div class="page-header">
        <h1>MODERN NAVBAR</h1>
        <div class="page-subtitle">
            <div># / HOVER</div>
            <div># / SELECTED</div>
        </div>
    </div>

    <!-- Hero Card Component -->
    <div class="hero-card">
        <div class="hero-content">
            <h1 class="hero-headline">Premium Event Experience</h1>
            <h2 class="hero-subtitle">Secure your tickets with our integrated checkout system</h2>

            <div class="hero-actions">
                <button class="hero-cta" id="toggleEmbed">View Integration</button>
                <button class="hero-cta secondary" id="showPlaceholder">Show Placeholder</button>
            </div>
        </div>

        <div class="hero-embed" id="embedContainer">
            <!-- Placeholder content by default -->
            <div class="embed-placeholder" id="placeholderContent">
                <div class="placeholder-icon">
                    <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z" fill="currentColor" opacity="0.6"/>
                    </svg>
                </div>
                <h3>Posh Checkout Integration</h3>
                <p>Click "View Integration" to load the live Posh checkout iframe</p>
                <div class="placeholder-features">
                    <span class="feature-tag">Secure Payments</span>
                    <span class="feature-tag">Real-time Processing</span>
                    <span class="feature-tag">Mobile Optimized</span>
                </div>
            </div>

            <!-- Posh iframe (hidden by default) -->
            <iframe
                id="poshIframe"
                src="https://embed.posh.vip/ticket-iframe/680fb268087c97aeac2468cb/"
                height="600px"
                width="100%"
                style="border: none; display: none;"
                loading="lazy"
                title="Posh Ticket Checkout">
            </iframe>
        </div>
    </div>

    <div class="navbar-container">
        <nav class="modern-navbar">
            <a href="#" class="nav-item selected" data-nav="home">Home</a>
            <a href="#" class="nav-item contact" data-nav="contact">Contact</a>
        </nav>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const navItems = document.querySelectorAll('.nav-item');
    const toggleEmbedBtn = document.getElementById('toggleEmbed');
    const showPlaceholderBtn = document.getElementById('showPlaceholder');
    const placeholderContent = document.getElementById('placeholderContent');
    const poshIframe = document.getElementById('poshIframe');

    // Navigation functionality
    navItems.forEach(item => {
        item.addEventListener('click', function(e) {
            e.preventDefault();

            // Add click animation class
            this.classList.add('clicking');

            // Remove selected state from all items
            navItems.forEach(navItem => {
                navItem.classList.remove('selected');
            });

            // Add selected state to clicked item
            this.classList.add('selected');

            // Remove click animation after animation completes
            setTimeout(() => {
                this.classList.remove('clicking');
            }, 200);
        });
    });

    // Hero card embed toggle functionality
    toggleEmbedBtn.addEventListener('click', function() {
        placeholderContent.style.display = 'none';
        poshIframe.style.display = 'block';
        this.textContent = 'Loading Integration...';
        this.disabled = true;

        // Re-enable button after iframe loads
        setTimeout(() => {
            this.textContent = 'Integration Loaded';
            this.disabled = false;
        }, 1000);
    });

    showPlaceholderBtn.addEventListener('click', function() {
        poshIframe.style.display = 'none';
        placeholderContent.style.display = 'block';
        toggleEmbedBtn.textContent = 'View Integration';
        toggleEmbedBtn.disabled = false;
    });
});
</script>
