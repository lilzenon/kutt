{{!-- Simple Clean Dashboard --}}

<div class="dashboard-content">
    <!-- Header -->
    <div class="dashboard-header">
        <h1>Dashboard</h1>
        <a href="/drops/create" class="btn-create">+ Create Drop</a>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <h3>{{stats.totalDrops}}</h3>
            <p>Total Drops</p>
        </div>
        <div class="stat-card">
            <h3>{{stats.totalFans}}</h3>
            <p>Total Fans</p>
        </div>
        <div class="stat-card">
            <h3>{{stats.totalSMS}}</h3>
            <p>SMS Sent</p>
        </div>
        <div class="stat-card">
            <h3>{{stats.activeDrops}}</h3>
            <p>Active Drops</p>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="activity-section">
        <h2>Recent Activity</h2>
        {{#if recentActivity}}
            <div class="activity-list">
                {{#each recentActivity}}
                    <div class="activity-item">
                        <strong>{{title}}</strong>
                        <p>{{description}}</p>
                        <small>{{timeAgo}}</small>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="empty-state">
                <p>No recent activity. <a href="/drops/create">Create your first drop!</a></p>
            </div>
        {{/if}}
    </div>

    <!-- Your Drops -->
    <div class="drops-section">
        <h2>Your Drops</h2>
        {{> drops/section}}
    </div>
</div>
