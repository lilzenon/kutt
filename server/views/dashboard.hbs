                    <a href="/drops/create" class="btn btn-primary">Create Drop</a>
                </div>
            {{/if}}
        </div>
    </div>
    
    <!-- Your Drops Section -->
    <div class="dashboard-section">
        <div class="section-header">
            <h2 class="section-title">Your Drops</h2>
            <a href="/drops" class="section-link">Manage All</a>
        </div>
        
        {{> drops/section}}
    </div>
</div>

