{{!-- Dashboard Home Page with New Navigation --}}

<div class="dashboard-content">
    <!-- Dashboard Header -->
    <div class="dashboard-header">
        <div class="dashboard-header-content">
            <h1 class="dashboard-title">Welcome back, {{user.email}}!</h1>
            <p class="dashboard-subtitle">Manage your drops and track your audience engagement</p>
        </div>
        
        <div class="dashboard-header-actions">
            <a href="/drops/create" class="btn btn-primary">
                <span class="btn-icon">+</span>
                Create Drop
            </a>
        </div>
    </div>
    
    <!-- Dashboard Stats -->
    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">ðŸ“Š</div>
            <div class="stat-content">
                <div class="stat-number">{{stats.totalDrops}}</div>
                <div class="stat-label">Total Drops</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">ðŸ‘¥</div>
            <div class="stat-content">
                <div class="stat-number">{{stats.totalFans}}</div>
                <div class="stat-label">Total Fans</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">ðŸ“±</div>
            <div class="stat-content">
                <div class="stat-number">{{stats.totalSMS}}</div>
                <div class="stat-label">SMS Sent</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">ðŸš€</div>
            <div class="stat-content">
                <div class="stat-number">{{stats.activeDrops}}</div>
                <div class="stat-label">Active Drops</div>
            </div>
        </div>
    </div>
    
    <!-- Recent Activity -->
    <div class="dashboard-section">
        <div class="section-header">
            <h2 class="section-title">Recent Activity</h2>
            <a href="/analytics" class="section-link">View All</a>
        </div>
        
        <div class="activity-list">
            {{#if recentActivity}}
                {{#each recentActivity}}
                    <div class="activity-item">
                        <div class="activity-icon">{{icon}}</div>
                        <div class="activity-content">
                            <div class="activity-title">{{title}}</div>
                            <div class="activity-description">{{description}}</div>
                            <div class="activity-time">{{timeAgo}}</div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="empty-state">
                    <div class="empty-icon">ðŸ“­</div>
